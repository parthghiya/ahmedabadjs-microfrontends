{
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "annotateForClosureCompiler": true
  }
,
    "compilerOptions": {
      "baseUrl": "./src",
      "outDir": "./dist",
      "declaration": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata":true,
       "rootDir":"./src",
      "target": "es5",
      "module": "es2015",
      
      "lib": [
        "es2017",
        "dom"
      ],
      "types" :[]
    },
    "exclude": [
        "**/*.spec.ts",
        "e2e"
      ]
  }
  